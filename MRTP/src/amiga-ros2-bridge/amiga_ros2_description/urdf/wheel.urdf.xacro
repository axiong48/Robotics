<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="wheel" params="wheel_name parent_link joint_origin_xyz joint_origin_rpy joint_axis_xyz">

    <link name="${wheel_name}">

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="3.0"/> 
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/> 
        <geometry>
           <mesh filename="package://amiga_ros2_description/meshes/${wheel_name}.STL" scale="1 1 1"/>
        </geometry>
        <material name="black">
            <color rgba="0.1 0.1 0.1 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
           <cylinder radius="0.217" length="0.1"/>
        </geometry>
      </collision>
      
    </link>

    <joint name="${wheel_name}_joint" type="continuous">
      <origin xyz="${joint_origin_xyz}" rpy="${joint_origin_rpy}"/>
      <parent link="${parent_link}"/>
      <child link="${wheel_name}"/>
      <axis xyz="${joint_axis_xyz}"/>
    </joint>

  </xacro:macro>

</robot>